<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/hsvFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/llFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnFilter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Color Overlay"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnFilter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:text="Saturation"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnFilter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Brightness"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnFilter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:text="Awe Struck"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnFilter5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/darker_gray"
                android:text="NightWishper"
                android:textSize="16sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/hsvFilters"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>